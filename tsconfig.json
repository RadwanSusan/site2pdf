{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "esnext",
		"moduleResolution": "NodeNext",
		"outDir": "./bin",
		"rootDir": "./src",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noEmit": false,
		"resolveJsonModule": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"site2pdf/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"out",
		"test",
		"bin"
	]
}